<section id="login-wrapper">
  <div class="intro">
    <h4>TravelBook is the one place for all your travel information!<br><br>Keep your photos, favorite restaurants, etc and share them with your friends!</h4>
  </div>
  <div class="login">
    <div class="show-login">
      <h2>Log in</h2>
    </div>
    <div class="login-form">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true %>
        </div>

        <div class="field">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "off" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>

        <div class="actions">
          <%= f.submit "Log in" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
    <div class="new user">
      <h2><%= link_to "New to TravelBook?", new_user_registration_path %></h2>
    </div>
  </div>
</section>